<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.predator.movietype">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HorrorActivity"
            android:label="@string/horror" />
        <activity
            android:name=".ComedyActivity"
            android:label="@string/comedy" />
        <activity android:name=".ThrillerActivity"
            android:label="@string/thriller"/>
        <activity android:name=".SciActivity"
            android:label="@string/sci_fiction"/>
        <activity android:name=".RomanticActivity"
            android:label="@string/romantic"/>
    </application>

</manifest>